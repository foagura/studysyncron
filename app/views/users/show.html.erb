<%= render 'shared/header' %>

<div class='main'>
  <div class="container">
    <%= render 'shared/sidebar' %>

    <div class="main-content">
      <!-- userのマイページを表示 -->
      <div class="mypage">
        <div class="myprofile">
          <div class="profile-header">
            <div class="profile-pic">
              <% if @user.image.attached? %>
                <%= image_tag @user.image, alt: "Profile Picture", class: "avatar" %>
              <% else %>
                <%= image_tag 'user_icon.png', alt: "Profile Picture", class: "avatar" %>
              <% end %>
            </div>
            <div class="profile-name">
              <h2><%= @user.nickname %></h2>
            </div>
          </div>
          <div class="profile-details">
            <div class="profile-item">
              <h3>自己紹介</h3>
              <p><%= @user.profile %></p>
            </div>
            <div class="profile-item">
              <h3>学習時間</h3>
              <p><%= '#' %> 時間</p>
            </div>
          </div>
          <div class="edit-button">
            <%= link_to '編集', '#', class: 'btn btn-primary' %>
          </div>
        </div>


        <!-- userがいままでした投稿を一覧で表示 -->
        <%= render 'shared/post_index', posts: @posts %>

      </div>
    </div>
  </div>
</div>